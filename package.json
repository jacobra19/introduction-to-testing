{
    "name": "testing-101",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "test": "jest",
        "test:list": "jest ./src/components/list --verbose --watchAll --coverage=true",
        "test:helloworld": "jest ./src/components/hello-world --verbose --watchAll --coverage=true",
        "test:topbar": "jest ./src/components/top-bar --verbose --watchAll --coverage=true",
        "test:e2e": "jest -c jest.config.js",
        "preview": "vite preview"
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "lodash": "^4.17.21"
    },
    "devDependencies": {
        "@types/react": "^18.0.26",
        "@types/react-dom": "^18.0.9",
        "@vitejs/plugin-react": "^3.0.0",
        "@types/lodash": "^4.14.177",
        "typescript": "^4.9.3",
        "vite": "^4.0.0",
        "@testing-library/react": "^13.4.0",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "ts-jest": "^29.0.5",
        "@types/jest": "^29.2.6",
        "jest-transformer-svg": "^2.0.0",
        "jest-transform-css": "^6.0.1",
        "jest-fetch-mock": "^3.0.3",
        "puppeteer": "^19.6.0",
        "jest-puppeteer": "^6.2.0"
    },
    "jest": {
        "transform": {
            "^.+\\.(ts|tsx|js|jsx)$": "ts-jest",
            "^.+\\.css$": [
                "jest-transform-css",
                {
                    "modules": true
                }
            ],
            "^.+\\.svg$": "jest-transformer-svg"
        },
        "testEnvironment": "jest-environment-jsdom",
        "automock": false,
        "resetMocks": false,
        "setupFiles": [
            "./jest.setup.js"
        ]
    }
}